root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[{*.{js,jsx,ts,tsx,vue,json},.eslintrc}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# For Github actions
[*.yml]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
